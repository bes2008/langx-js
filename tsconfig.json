{
  "compilerOptions": {
    "sourceMap": true,
    "charset": "utf8",
    "noImplicitAny": false,
    "strict": false,
    "removeComments": true,
    "moduleResolution": "node",
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "traceResolution":true,
    "suppressImplicitAnyIndexErrors" : false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "downlevelIteration": true
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
